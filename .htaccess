RewriteRule ^calendar/?$ /cgi-bin/page_calendar.php [L,NC]

# ------------mygirls -------------
RewriteRule ^mygirls/p/(\d*)/?$ /cgi-bin/page_mygirls_imglist.php?page=$1 [L,NC]
