#------------------ post -----------
RewriteRule ^post/?(.*)?$ /days/$1 [R,NC] #old url [post] redirect to new url [days]
RewriteRule ^days/p/?(\d*) /cgi-bin/page_post.php?page=$1 [L,NC]
RewriteRule ^days/(\d*) /cgi-bin/page_post.php?id=$1 [L,NC]
RewriteRule ^days/?$ /cgi-bin/page_post.php [L,NC]

# general static pages
RewriteRule ^s/([^/]+)/?$ /cgi-bin/page_static.php?tag=$1 [L,NC]

# -------------------- admin pages --------------------------
RewriteRule ^a/list_table/(\w+)/page/(\d+)/?$ /cgi-bin/admin/list_table.php?sel=$1&page=$2 [L,NC]
RewriteRule ^a/list_page/(\d+)/?$ /cgi-bin/admin/list_page.php?page=$1 [L,NC]
RewriteRule ^a/(edit_[^/]+)/?$ /cgi-bin/admin/$1.php [L,NC]
RewriteRule ^a/([^/]+.cgi)/? /cgi-bin/admin/$1 [L,NC]
RewriteRule ^a/([^/]+)/? /cgi-bin/admin/$1.php [L,NC]
RewriteRule ^a/?$ /cgi-bin/admin/login.php [L,NC]

# ---------- no more change, archive pages-----------
RewriteRule ^shinya/?$ /s/kaidan [L,NC]
