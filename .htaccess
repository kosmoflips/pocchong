Options -Indexes
RewriteEngine on
RewriteBase /

RewriteCond %{HTTP_HOST} ^pocchong\.de$ [NC]
RewriteRule ^(.*)$ http://www.pocchong.de/$1 [R=301,L,NC]

#### TMP 503 REDIRECTS #############

##### redirect from clean url to source code #############
# --------------- main pages ----------------------
RewriteRule ^archiv/y/(\d+)/?$ /cgi-bin/page_archiv.php?year=$1 [L,NC]
RewriteRule ^archiv/(\d+)/?$ /cgi-bin/page_archiv.php?page=$1 [L,NC]
RewriteRule ^archiv/?$ /cgi-bin/page_archiv.php [L,NC]

# RewriteRule ^mygirls/t/(\d+)/?(\d*) /cgi-bin/page_mygirls.php?tag=$1&offset=$2 [L,NC]
RewriteRule ^mygirls/p/?(\d*) /cgi-bin/page_mygirls.php?page=$1 [L,NC]
RewriteRule ^mygirls/(\d*) /cgi-bin/page_mygirls.php?id=$1 [L,NC]
RewriteRule ^mygirls/?$ /cgi-bin/page_mygirls.php [L,NC]

RewriteRule ^post/?(.*)?$ /days/$1 [R,NC] #old url [post] redirect to new url [days]
RewriteRule ^days/p/?(\d*) /cgi-bin/page_post.php?page=$1 [L,NC]
RewriteRule ^days/(\d*) /cgi-bin/page_post.php?id=$1 [L,NC]
RewriteRule ^days/?$ /cgi-bin/page_post.php [L,NC]

# files under this dir need extention
RewriteRule ^exec/(.*)$ /e/$1 [R,NC]
RewriteRule ^e/(.*)?$ /cgi-bin/exec/$1 [L,NC]

# ------------ static pages and misc ---------
# direct redirects
RewriteRule ^about/?$ /static/about.php [L,NC]
RewriteRule ^shinya/?$ /backyard/shinya/kaidan.php [L,NC]
# general static pages
RewriteRule ^s/([^/]+)/?$ /static/$1.php [L,NC]

# -------------------- admin pages --------------------------
RewriteRule ^a/list_table/(\w+)/page/(\d+)/?$ /cgi-bin/admin/list_table.php?sel=$1&page=$2 [L,NC]
RewriteRule ^a/(edit_[^/]+)/?$ /cgi-bin/admin/$1.php [L,NC]
RewriteRule ^a/([^/]+.cgi)/? /cgi-bin/admin/$1 [L,NC]
RewriteRule ^a/([^/]+)/? /cgi-bin/admin/$1.php [L,NC]
RewriteRule ^a/?$ /cgi-bin/admin/login.php [L,NC]

# ---------- cyouwa oto dead archive-----------
RewriteRule ^cyouwa/?$ /backyard/cyouwa/index.php [L,NC]
RewriteRule ^cyouwa/(.*).html$ /backyard/cyouwa/$1.php [L,NC]
